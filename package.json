{
  "name": "shuttersaga",
  "private": true,
  "version": "1.0.0",
  "description": "Photo gallery app with Azure Blob Storage",
  "scripts": {
    "dev": "concurrently -n \"CLIENT,SERVER\" -c \"cyan,magenta\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm --prefix client run dev",
    "dev:server": "npm --prefix server run dev",
    "build": "npm --prefix client run build",
    "build:all": "npm run install:all && npm run build",
    "start": "npm --prefix server run start",
    "start:prod": "npm --prefix server run start:prod",
    "preview": "npm --prefix client run preview",
    "lint": "npm --prefix client run lint && npm --prefix server run lint",
    "install:all": "npm install && npm --prefix client install && npm --prefix server install",
    "clean": "rimraf client/dist server/node_modules client/node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
